
#Questão01


salario = float(input("Digite o salario: "))
tempo_empresa = int(input("Digite quantos anos de empresa: "))

if salario < 2000.0 and tempo_empresa >= 5:
	bonus = salario * 0.2
elif salario < 2000.0 and tempo_empresa < 5:
	bonus = salario * 0.1
elif salario >= 2000.0 and tempo_empresa >= 5:
	bonus = salario * 0.05
else:
	bonus = 0

print("O bônus será de R$", bonus)




#Questão02


ladoA = float(input("Digite o primeiro lado: "))
ladoB = float(input("Digite o segundo lado: "))
ladoC = float(input("Digite o terceiro lado: "))

# soma dos lados para saber se é maior que o terceiro lado
if (ladoA + ladoB > ladoC) and (ladoA + ladoC > ladoB) and (ladoB + ladoC > ladoA):
	
	if ladoA == ladoB == ladoC:     # todos os lados iguais
		print("Equilatero")
	elif ladoA == ladoB or ladoA == ladoC or ladoB == ladoC:    # dois lados
		print("Isosceles")
	else:                           # medidas diferentes
		print("Escaleno")
		
else:
    
print("Nao é um triangulo")










#Questão05


dia = int(input("Escolha um dia do mês: "))
mes = int(input("Escolha um mês: "))
ano = int(input("Escolha um ano: "))
if mes in {1, 3, 5, 7, 8, 10, 12}:
        max_dia = 31
    
elif mes in {4, 6, 9, 11}:
        max_dia = 30
    
elif mes == 2:
       
        se_bissexto = (ano % 4 == 0) and ((ano % 100 != 0) or (ano % 400 == 0))
        max_dia = 29 if se_bissexto else 28



if 1 <= dia <= max_dia: print("Data válida.")


else:
  print("Erro na data")
     
    



