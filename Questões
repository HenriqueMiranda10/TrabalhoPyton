#Questão07



idade = int(input("Digite sua idade: "))
salario = float(input("digite seu salario: "))
divida = float(input("digite sua divida: "))

if salario < 2000 and divida >= (salario / 2):
    print("sua divida é alta")
elif (salario > 2000 and salario < 5000) and (divida > (salario * 0.30 ) and divida < (salario * 0.50)):
    print("sua divida é media")
elif salario > 5000 and divida < (salario * 0.30):
    print("sua divida é baixa")
else:
    print("sua renda é medio-baixo")






#Questão08



resposta_correta = ['B', 'C', 'D', 'A']

entrada = input("Digite sua sequência de 4 cartas (ex: BADC): ").upper()
resposta_usuario = list(entrada)

pontuacao = 0


for i in range(4):
    if resposta_usuario[i] == resposta_correta[i]:
        pontuacao += 10  # Esta linha deve estar dentro do bloco do if


pontuacao += 5 * resposta_usuario.count('A')


for i in range(len(resposta_usuario) - 1):
    if resposta_usuario[i] == 'C' and resposta_usuario[i + 1] == 'D':
        pontuacao += 5
        break

print("Sua pontuação final é:", pontuacao)




#Questão09




produto = float(input("digite o preço do produto: "))
cliente = bool(input("voce é cliente vip?(true para 'sim' e false para 'nao'): "))

if produto >= 100:
    desconto = produto * 0.20
elif produto >= 50 and produto < 100:
    desconto = produto * 0.10
elif produto < 50:
    desconto = produto

print("seu produto com desconto: " + desconto)

if cliente == True:
    desconto = desconto * 0.05
    print("seu produto com desconto vip: " + desconto)




#Questão10




print("Crie uma senha seguindo as regras abaixo:")
print("- Mínimo de 8 caracteres")
print("- Pelo menos 1 letra maiúscula")
print("- Pelo menos 1 letra minúscula")
print("- Pelo menos 1 número")
print("- Pelo menos 1 símbolo entre: !@#$%")

senha = input("Digite sua senha: ")

tem_maiuscula = False
tem_minuscula = False
tem_numero = False
tem_simbolo = False

# Verifica caractere por caractere
for caractere in senha:
    if caractere >= 'A' and caractere <= 'Z':
        tem_maiuscula = True
    elif caractere >= 'a' and caractere <= 'z':
        tem_minuscula = True
    elif caractere >= '0' and caractere <= '9':
        tem_numero = True
    elif caractere in '!@#$%':
        tem_simbolo = True

# Verifica o tamanho
tem_tamanho = len(senha) >= 8

# Resultado final
if tem_tamanho and tem_maiuscula and tem_minuscula and tem_numero and tem_simbolo:
    print("✅ Senha válida!")
else:
    print("❌ Senha inválida. Verifique se ela atende a todas as regras.")


    

  

  
    











